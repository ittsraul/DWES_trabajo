{% extends "layout.html.twig" %}
{% block content %}
	<div id="content">
		<h1>CLIENTS</h1>
		 <a href='{{ path('app_insert')}}'>[NEW]</a> 
		<a href="{{path('app_main')}}">[HOME]</a> 
		<table border ="1">
			{# Cálculo de valores para la paginación #}
			{% set elementsPerPage = 4 %}
			{% set lowerLimit = (page -1) * elementsPerPage + 1 %}
			{% set upperLimit = page * elementsPerPage %}

			{# List de resultados paginado #}
			{% for task in clients %}
				{% if loop.index >= lowerLimit and loop.index <= upperLimit %}
					<tr>
							<td>
								<a href="{{ path('app_detail',{user:task.clienteCod}) }}"> {{task.nombre}} </a>
							</td>
							<td style="color: black"> {{task.ciudad}} </td>
							<td>
								  <a href="{{ path('app_delete',{user:task.clienteCod}) }}"> [x] </a>  
							</td>
							<td>
								 <a href=' {{ path('app_update',{user:task.clienteCod}) }} '>[U]</a>  
							</td>
					</tr>
				{% endif %}
			{% endfor %}
		</table>
		{# Navegador #}
		{% set totalPages = (((clients|length)/elementsPerPage)|round(0, 'ceil')) %}
		{% if page > 1 %}
			<a href="/list/1">&lt;&lt;</a>
			<a href="/list/{{ page - 1 }}">&lt;</a>
		{% else %}
			<span>&lt;&lt;</span>
			<span>&lt;</span>
		{% endif %}
		{% for pageButton in 1..totalPages %}
			{% if pageButton == page%}
				<span>{{ pageButton }}</span>
			{% else %}
				<a href="/list/{{ pageButton }}">{{ pageButton }}</a>
			{% endif %}
		{% endfor %}
		{% if page < totalPages %}
			<a href="/list/{{ page + 1 }}">&gt;</a>
			<a href="/list/{{ totalPages }}">&gt;&gt;</a>
		{% else %}
			<span>&gt;</span>
			<span>&gt;&gt;</span>
		{% endif %}
	</div>
{% endblock %}
